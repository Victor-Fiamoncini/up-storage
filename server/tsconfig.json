{
  "compilerOptions": {
    "target": "ES2017",
		"module": "commonjs",
		"allowJs": true,
		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./build",
		"rootDir": "./src"
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./build"]
}
